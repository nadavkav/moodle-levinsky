+                    $this->execute('behat_general::i_click_on', array(
+                            '.forumng-p' . $post . ' .forumng-expandlink', 'css_element'));
+                }
+            }
+        } catch (ElementNotFoundException $e) {
+            // I guess we ignore this? Don't know why.
+            return;
+        }
+    }
