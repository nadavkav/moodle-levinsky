+}
+if (($back=='index' && !($cmid || $courseid))) {
+    $back = '';
+}
+if (($back=='view' && !$cmid)) {
+    $back = '';
+}
+if (($back=='discuss' && !$discussionid)) {
+    $back = '';
+}
