+        }
+
+        $modinfo = get_fast_modinfo($course);
+        $instances = $modinfo->get_instances_of('forumng');
+        if (!array_key_exists($this->forumng->id, $instances)) {
+            throw new portfolio_caller_exception('error_export', 'forumng');
