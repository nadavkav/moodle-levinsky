+        $root = $discussion->get_root_post();
+        $childposts = $root->has_children();
+        $creator = $discussion->get_poster();
+        if ($creator->id == $USER->id && !$childposts && $root->can_edit($whynot)) {
+            return true;
+        }
+        return false;
