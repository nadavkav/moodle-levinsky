+function make_forumng($courseid, $starttime, $discussions, $posts,
+    $readpercent, $readusers, &$userids, $subscribepercent, $ratingpercent) {
+    global $DB;
+    $section = $DB->get_record('course_sections', array('course' => $courseid, 'section' => 0),
