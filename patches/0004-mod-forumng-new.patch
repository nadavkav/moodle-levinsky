+
+            // Delete any individual post records for discussions as now redundant.
+            $DB->execute("DELETE FROM {forumng_read_posts}
+                            WHERE postid IN(
+                                  SELECT id FROM {forumng_posts}
+                                   WHERE $inorequals)
+                              AND userid = ? AND time <= ?",
+                    array_merge($inparams, array($userid, $time)));
+        }
+
+        $transaction->allow_commit();
+    }
