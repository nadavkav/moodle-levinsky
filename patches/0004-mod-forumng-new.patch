+        $mod = $modinfo->get_cm($foruma->cmid);
+        moveto_module($mod, $sectionone);
+        // Move forum B to section 0.
+        $mod = $modinfo->get_cm($forumb->cmid);
+        moveto_module($mod, $sectionzero);
+        // Move forum C to section 1.
+        $mod = $modinfo->get_cm($forumc->cmid);
+        moveto_module($mod, $sectionone);
