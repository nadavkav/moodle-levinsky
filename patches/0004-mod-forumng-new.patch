+
+    $where .= ' AND fd.deleted = ?';
+    $whereparams[] = 0;
+
+    $where .= ' AND fd.forumngid = ?';
+    $whereparams[] = $forumngid;
+
+    $orderby = 'fd.id, fp.id';
+
+    // See line 827 of mod_forumng_post.php.
