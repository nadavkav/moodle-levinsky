+        $sourcediscussion = mod_forumng_discussion::get_from_id(
+                $SESSION->forumng_mergefrom->discussionid,
+                $SESSION->forumng_mergefrom->cloneid);
+        $sourcediscussion->require_view();
+        if (!$sourcediscussion->can_split($whynot)) {
