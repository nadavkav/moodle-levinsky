+                        $obj->rawname = $value;
+                        $obj->tagtype = 'default';
+                        $obj->count = 0;
+                        $obj->displayname = $value;
+                        $rs[$key] = $obj;
+                        $needsort = true;
+                    }
+                }
+
+                // Sort on displayname.
+                if ($needsort) {
+                    usort($rs, function($a, $b){
+                        return strcmp($a->displayname, $b->displayname);
+                    });
+                }
+            }
+
+            return $rs;
+        }
