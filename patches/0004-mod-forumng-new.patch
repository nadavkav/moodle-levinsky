+    public function get_all_user_post_counts($groupid, $ignoreanon = false, $start = null, $end = null) {
+        global $DB;
+
+        if ($groupid != self::NO_GROUPS && $groupid != self::ALL_GROUPS) {
+            $groupwhere = 'AND (fd.groupid = ? OR fd.groupid IS NULL)';
