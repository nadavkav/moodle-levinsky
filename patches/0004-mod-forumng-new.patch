+    $newpost = mod_forumng_post::get_from_id($newpostid, mod_forumng::CLONE_DIRECT);
+    $allposts[] = $newpost;
+
+    // Add ratings
+    for ($i=0; $i<count($userids); $i++) {
+        if (my_random_percentage($ratingpercent)) {
+            $newpost->rate(2, $userids[$i]);
+        }
+    }
