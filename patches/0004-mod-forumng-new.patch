+    public function can_change_subscription($userid=0) {
+        switch ($this->get_effective_subscription_option()) {
+            case self::SUBSCRIPTION_NOT_PERMITTED:
+                return false;
+
+            case self::SUBSCRIPTION_FORCED:
+                if ($this->is_forced_to_subscribe($userid)) {
