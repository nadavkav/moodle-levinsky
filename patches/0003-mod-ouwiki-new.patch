+Step 3 - Confirm
+Step 4 - Process import
+*/
+$curstep = optional_param('step', 1, PARAM_INT);
+if (optional_param('cancel', '', PARAM_TEXT) == get_string('cancel')) {
+    // Cancelled last step, go back one.
+    $curstep -= 2;
