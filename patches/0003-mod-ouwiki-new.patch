+                ouwiki_init_pages($course, $cm, $ouwiki, $subwiki);
+                return $subwiki;
+            }
+            ouwiki_error('Wiki does not exist. View wikis before attempting other actions.');
+            break;
+
+        default:
+            ouwiki_error("Unexpected subwikis value: {$ouwiki->subwikis}");
+    }
