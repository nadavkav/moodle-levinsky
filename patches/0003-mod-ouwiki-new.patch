+                v.deletedat, $userfields,
+                v.wordcount
+            FROM {ouwiki_pages} p, {ouwiki_versions} v
+            LEFT JOIN {user} u ON v.userid = u.id
+            WHERE p.subwikiid = ? AND v.id = ? AND UPPER(p.title) = ?";
+
