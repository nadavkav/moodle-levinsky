+$pagelink = $CFG->wwwroot . '/mod/ouwiki/wikihistory.php?' . $wikiparams;
+
+print '<?xml version="1.0"?>
+<?xml-stylesheet type="text/xsl" href="'.$CFG->wwwroot.'/mod/ouwiki/feed.xsl"?>';
+if ($rss) {
+    print '
+<rss version="2.0">
