@@ -325,7 +325,7 @@ class restore_course_search extends restore_search_base {
         $from       = " FROM {course} c ";
         $where      = " WHERE (".$DB->sql_like('c.fullname', ':fullnamesearch', false)." OR ".
             $DB->sql_like('c.shortname', ':shortnamesearch', false).")";
