+if ($courseid == SITEID) {
+    $returnurl = new moodle_url('/');
+} else {
+    $returnurl = new moodle_url('/course/view.php', array('id' => $courseid));
+}
+
+try {
+	$controller = new sharing_cart\controller();
+	$controller->restore($id, $courseid, $sectionnumber);
