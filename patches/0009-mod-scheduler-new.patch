+                $rows = $rowcutoff;
+            }
+            $relwidths = $this->compute_relative_widths($page);
+
+            $table = new html_table();
+            $table->cellpadding = 3;
+            for ($row = 0; $row < $rows; $row++) {
+                $hrow = new html_table_row();
+                $col = 0;
+                while ($col < $cols) {
