+
+$pages = array('thisappointment');
+if ($slot->get_appointment_count() > 1) {
+    $pages[] = 'otherstudents';
+}
+if (count($appts) > 1) {
+    $pages[] = 'otherappointments';
+}
+
+if (!in_array($subpage, $pages) ) {
+    $subpage = 'thisappointment';
+}
