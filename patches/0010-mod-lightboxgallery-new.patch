+
+$context = context_module::instance($cm->id);
+
+$galleryurl = $CFG->wwwroot.'/mod/lightboxgallery/view.php?id='.$cm->id;
+
+if ($delete && has_capability('mod/lightboxgallery:edit', $context)) {
