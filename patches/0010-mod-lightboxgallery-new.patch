+
+    public function __construct($storedfile, $gallery, $cm) {
+        global $CFG;
+
+        $this->storedfile = &$storedfile;
+        $this->gallery = &$gallery;
+        $this->cm = &$cm;
+        $this->cmid = $cm->id;
