+
+    if (!count($choicegroup_groups)) {
+        $choicegroup_groups = choicegroup_get_groups($choicegroup);
+    }
+
+    $groupids = array();
+    foreach ($choicegroup_groups as $group) {
+        if (is_numeric($group->id)) {
+            $groupids[] = $group->id;
+        }
+    }
+    if ($groupids) {
+        $params1 = array($userid);
