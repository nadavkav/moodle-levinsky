+function choicegroup_get_user_answer($choicegroup, $user, $returnArray = FALSE, $refresh = FALSE) {
+    global $DB, $choicegroup_groups;
+
+    static $user_answers = array();
+
+    if (is_numeric($user)) {
+        $userid = $user;
+    }
+    else {
+        $userid = $user->id;
+    }
+
+    if (!$refresh and isset($user_answers[$userid])) {
