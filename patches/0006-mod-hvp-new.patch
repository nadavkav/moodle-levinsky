+    // @codingStandardsIgnoreLine
+    private static function moveFile($sourcefile, $contextid, $contentid) {
+        $fs = get_file_storage();
+
+        $pathparts = pathinfo($sourcefile);
+        $filename  = $pathparts['basename'];
+        $filepath  = $pathparts['dirname'];
+        $foldername = basename($filepath);
