+        if ($contentid > 0) {
+            // Create file record for content.
+            $record = array(
+                'contextid' => $contextid,
+                'component' => 'mod_hvp',
+                'filearea' => $contentid > 0 ? 'content' : 'editor',
+                'itemid' => $contentid,
+                'filepath' => '/' . $foldername . '/',
+                'filename' => $filename
